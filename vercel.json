{
  "version": 2,
  "name": "flattr-monorepo",
  "github": {
    "silent": true
  },
  "buildCommand": "cd apps/backend && pnpm run build",
  "installCommand": "cd apps/backend && pnpm install --no-scripts",
  "outputDirectory": "apps/backend/dist",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.flattr.io/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "git": {
    "deploymentEnabled": {
      "main": true
    }
  },
  "redirects": [
    {
      "source": "/(.*)",
      "has": [
        {
          "type": "host",
          "value": "(?!www\\.flattr\\.io).*"
        }
      ],
      "destination": "https://www.flattr.io/$1",
      "statusCode": 307,
      "permanent": false
    }
  ]
}